<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="translucent">
    <item

        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:height="30dp"
        android:width="30dp"
        android:drawable="@drawable/ic_menu_bg">



        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <corners android:radius="50dp" />
        </shape>
        <ripple android:color="@color/white"/>
    </item>

    <item

        android:width="20dp"
        android:height="15dp"
        android:gravity="center"
        android:drawable="@drawable/ic_menu">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <corners android:radius="50dp" />
        </shape>
        <ripple android:color="@color/black"/>
    </item>
</layer-list>