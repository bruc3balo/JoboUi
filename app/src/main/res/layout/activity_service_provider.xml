<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serviceProviderUi.ServiceProviderActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/serviceProviderToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_worker"
            app:title="@string/service_provider"
            android:layout_gravity="center"
            app:subtitleTextColor="@color/black"
            android:background="@color/deep_purple"/>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <LinearLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_mailbox"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="30dp"
                               android:layout_marginEnd="30dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/view_offers"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_worker"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/service_provider"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_history"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/history"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_service"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/service"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_person_feedback"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/feedback"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_notifications"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/notification"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <androidx.cardview.widget.CardView
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       app:cardElevation="12dp"
                       app:cardCornerRadius="15dp"
                       android:layout_gravity="center"
                       android:layout_margin="15dp"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="150dp"
                               android:layout_margin="5dp"
                               android:layout_gravity="center"
                               android:src="@drawable/ic_settings"/>

                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_gravity="center"
                               android:background="@color/purple"
                               android:layout_marginTop="5dp"
                               android:layout_marginBottom="5dp"
                               android:layout_marginStart="60dp"
                               android:layout_marginEnd="60dp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:text="@string/action_settings"
                               android:fontFamily="serif"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>



               </LinearLayout>

           </LinearLayout>

       </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>