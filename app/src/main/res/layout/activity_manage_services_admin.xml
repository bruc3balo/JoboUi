<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ManageServicesAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            app:subtitleTextColor="@color/grey"
            android:layout_gravity="center"
            app:title="Manage Services"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"/>

        <me.relex.circleindicator.CircleIndicator3
            android:layout_margin="5dp"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ci_drawable_unselected="@drawable/purple_dot"
            app:ci_drawable="@drawable/black_dot"
            android:layout_gravity="center" />

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/servicesPager"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>